pipeline {
    agent any
    tools {
        jdk 'JDK 8'
        maven 'Maven 3'
    }
    stages {
        stage('Clone') {
            steps {
                git branch: 'master', url: 'https://github.com/Jakarta-EE-Petclinic/petclinic-javaee7.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }
        stage('Unit Tests') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Package') {
            steps {
                bat 'mvn package'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: '**/target/*.war', allowEmptyArchive: true
        }
    }
}
